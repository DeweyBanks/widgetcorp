<div class="row-fluid">
  <div class="col-md-8 col-md-offset-2">
    <div class="page-header">
      <h1>Log In</h1>
    </div>
    <%= form_tag user_sessions_path, :class => "form" do %>
      <div class="form-group row">
        <%= label_tag :email, "Email Address" %>
        <%= email_field :email, params[:email], :class => "form-control" %>
      </div>
      <div class="form-group row">
        <%= label_tag :password, "Password" %><br>
        <%= password_field_tag :password, :class => "form-control" %>
      </div>

      <div class="form-group row">
        <%= submit_tag "Log In", :class => "btn btn-success" %>
        <%= link_to "Sign Up", new_user_path, :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
